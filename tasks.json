//single file and for c plus plus
{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                "-g",
                "-static-libgcc",
                "-fexec-charset=GBK"
            ],
            "options": {
                "cwd": "C:\\Program Files\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
